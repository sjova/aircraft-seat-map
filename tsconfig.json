/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/aircraft-seat-map/*": ["src/aircraft-seat-map/*"],
      "@app/app/*": ["src/app/*"],
      "@app/assets/*": ["src/assets/*"],
      "@app/environments/*": ["src/environments/*"],
      "crypto": ["node_modules/crypto-js"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
